<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
]>
<component>
    <tag>tab</tag>
    <tagClass>org.helix.mobile.component.tab.TabTag</tagClass>
    <componentClass>org.helix.mobile.component.tab.Tab</componentClass>
    <componentType>org.helix.mobile.Tab</componentType>
    <componentFamily>org.helix.mobile.component</componentFamily>
    <rendererType>org.helix.mobile.component.TabRenderer</rendererType>
    <rendererClass>org.helix.mobile.component.tab.TabRenderer</rendererClass>
    <parent>javax.faces.component.UIOutput</parent>
    <attributes>
	<attribute>
            <name>page</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>Page to navigate to when the tab bar is clicked. Use the page ID (no hashmark).</description>
        </attribute>
        <attribute>
            <name>icon</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>Value for the data-icon attribute. Either a built-in jQM icon or 'custom'.</description>
        </attribute>
        <attribute>
            <name>customIcon</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <description>Set to true if this icon is a custom icon. Default is false.</description>
            <defaultValue>false</defaultValue>
        </attribute>
        <attribute>
            <name>name</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>Text to display underneath the icon for the tab.</description>
        </attribute>
        <attribute>
            <name>theme</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>a</defaultValue>
        </attribute>
    </attributes>
</component>