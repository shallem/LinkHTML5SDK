<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
    <tag>formLayout</tag>
    <tagClass>org.helix.mobile.component.formlayout.FormLayoutTag</tagClass>
    <componentClass>org.helix.mobile.component.formlayout.FormLayout</componentClass>
    <componentType>org.helix.mobile.FormLayout</componentType>
    <componentFamily>org.helix.mobile.component</componentFamily>
    <rendererType>org.helix.mobile.component.FormLayoutRenderer</rendererType>
    <rendererClass>org.helix.mobile.component.formlayout.FormLayoutRenderer</rendererClass>
    <parent>javax.faces.component.UIOutput</parent>
    <interfaces>
        <interface>
            <name>org.primefaces.component.api.Widget</name>
        </interface>
    </interfaces>
    <attributes>
            &widget_var_attribute;
        <attribute>
            <name>id</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>Client ID of this form layout.</description>
        </attribute>
        <attribute>
            <name>editMode</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <description>Indicates if the form should be displayed in view or edit mode.</description>
        </attribute>
        <attribute>
            <name>separateElements</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <description>Indicates if a horizontal separator should be placed in between form fields.</description>
        </attribute>
        <attribute>
            <name>fieldStyle</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Optional style for the field container.</description>
        </attribute>
        <attribute>
            <name>fieldStyleMap</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Optional map from device type to style for the field container. Overrides the style attribute.</description>
        </attribute>
        <attribute>
            <name>fieldStyleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Optional style class for the field container.</description>
        </attribute>
        <attribute>
            <name>fieldStyleClassMap</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Optional map from device type to style class for the field container. Overrides the styleClass attribute.</description>
        </attribute>
        <attribute>
            <name>titleStyleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Default style class for all field titles</description>
        </attribute>
    </attributes>
</component>