<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
    <tag>contextMenu</tag>
    <tagClass>org.helix.mobile.component.contextmenu.ContextMenuTag</tagClass>
    <componentClass>org.helix.mobile.component.contextmenu.ContextMenu</componentClass>
    <componentType>org.helix.mobile.ContextMenu</componentType>
    <componentFamily>org.helix.mobile.component</componentFamily>
    <rendererType>org.helix.mobile.component.ContextMenuRenderer</rendererType>
    <rendererClass>org.helix.mobile.component.contextmenu.ContextMenuRenderer</rendererClass>
    <parent>javax.faces.component.UIOutput</parent>
    <interfaces>
        <interface>
            <name>org.primefaces.component.api.Widget</name>
        </interface>
    </interfaces>
    <attributes>
            &widget_var_attribute;
        <attribute>
            <name>theme</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>a</defaultValue>
            <description>jQuery Mobile theme of the context menu items list.</description>
        </attribute>
        <attribute>
            <name>dividerTheme</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>b</defaultValue>
            <description>jQuery Mobile theme of dividers in the menu.</description>
        </attribute>
        <attribute>
            <name>positionTo</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>origin</defaultValue>
            <description>jQuery Mobile theme of the context menu popup.</description>
        </attribute>
        <attribute>
            <name>useMiniLayout</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>A JavaScript map from device type string to boolean value indicating if the mini layout should be used. The default is to use the mini layout for phones only.</description>
        </attribute>
        <attribute>
            <name>beforeOpen</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Optional callback to be invoked before the context menu opens on screen.</description>
        </attribute>
        <attribute>
            <name>afterClose</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Optional callback to be invoked after the context menu closes.</description>
        </attribute>
        <attribute>
            <name>id</name>
            <required>false</required>
            <type>java.lang.String</type>
            <ignoreInComponent>true</ignoreInComponent>
            <literal>true</literal>
            <description>Unique identifier of the component in a namingContainer.</description>
        </attribute>
    </attributes>
</component>