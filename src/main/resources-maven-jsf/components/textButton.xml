<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
    <tag>textButton</tag>
    <tagClass>org.helix.mobile.component.textbutton.TextButtonTag</tagClass>
    <componentClass>org.helix.mobile.component.textbutton.TextButton</componentClass>
    <componentType>org.helix.mobile.TextButton</componentType>
    <componentFamily>org.helix.mobile.component</componentFamily>
    <rendererType>org.helix.mobile.component.TextButtonRenderer</rendererType>
    <rendererClass>org.helix.mobile.component.textbutton.TextButtonRenderer</rendererClass>
    <parent>javax.faces.component.UIOutput</parent>

    <attributes>
        &standard_uicomponent_attributes;
        <attribute>
            <name>onstart</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Client side callback to execute before href/onclick begins.</description>
        </attribute>
        <attribute>
            <name>onclick</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Action to execute on click.</description>
        </attribute>
        <attribute>
            <name>oncomplete</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Client side callback to execute when href/onclick is completed.</description>
        </attribute>
        <attribute>
            <name>align</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Indicate if a button is left or right aligned in the context of a button bar.</description>
            <defaultValue>left</defaultValue>
        </attribute>
        <attribute>
            <name>href</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Link to browse to if this button is clicked.</description>
            <defaultValue>javascript:void(0);</defaultValue>
        </attribute>
        <attribute>
            <name>corner</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Adds a corner to a button. Can be left, right, top, or bottom.</description>
        </attribute>
        <attribute>
            <name>local</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <description>Indicates that this button should not generate an ajax bean request to the JSF backing bean.</description> 
        </attribute>
        <attribute>
            <name>width</name>
            <required>false</required>
            <type>java.lang.Integer</type>
            <defaultValue>60</defaultValue>
            <description>Minimum width in pixels of this button.</description>
        </attribute>
        <attribute>
            <name>value</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>Caption for this button.</description>
        </attribute>
        <attribute>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>CSS style class for this button.</description>
        </attribute>
        <attribute>
            <name>theme</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>b</defaultValue>
            <description>Button theme.</description>
        </attribute>
    </attributes>

</component>