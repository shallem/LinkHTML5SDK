<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
    <tag>page</tag>
    <tagClass>org.helix.mobile.component.page.PageTag</tagClass>
    <componentClass>org.helix.mobile.component.page.Page</componentClass>
    <componentType>org.helix.mobile.Page</componentType>
    <componentFamily>org.helix.mobile.component</componentFamily>
    <rendererType>org.helix.mobile.component.PageRenderer</rendererType>
    <rendererClass>org.helix.mobile.component.page.PageRenderer</rendererClass>
    <parent>javax.faces.component.UIPanel</parent>
    <attributes>
		&standard_uicomponent_attributes;
        <attribute>
            <name>title</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>Title of the page.</description>
        </attribute>
        <attribute>
            <name>defaultPageTransition</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>Name of animation to use in view navigation.</description>
        </attribute>
        <attribute>
            <name>defaultDialogTransition</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>Name of animation to use when displaying a dialog.</description>
        </attribute>
        <attribute>
            <name>loadingMessage</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>Text to display in built-in ajax status.</description>
        </attribute>
        <attribute>
            <name>viewport</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=0</defaultValue>
            <description>Meta settings for viewport.</description>
        </attribute>
        <attribute>
            <name>manifest</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Manifest setting of document.</description>
        </attribute>
        <attribute>
            <name>mini</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <description>When enabled form components displayed smaller.</description>
        </attribute>
    </attributes>
</component>