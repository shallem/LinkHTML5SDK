<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
]>
<component>

    <tag>overlay</tag>
    <tagClass>org.helix.mobile.component.overlay.OverlayTag</tagClass>
    <componentClass>org.helix.mobile.component.overlay.Overlay</componentClass>
    <componentType>org.helix.mobile.Overlay</componentType>
    <componentFamily>org.helix.mobile.component</componentFamily>
    <rendererType>org.helix.mobile.component.OverlayRenderer</rendererType>
    <rendererClass>org.helix.mobile.component.overlay.OverlayRenderer</rendererClass>
    <parent>javax.faces.component.UIPanel</parent>

    <attributes>
        <attribute>
            <name>id</name>
            <required>false</required>
            <type>java.lang.String</type>
            <ignoreInComponent>true</ignoreInComponent>
            <literal>true</literal>
            <description>Unique identifier of the component in a namingContainer.</description>
        </attribute>
        <attribute>
            <name>position</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>right</defaultValue>
            <description>Indicate if the overlay should appear to the left or the right of the screen.</description>
        </attribute>
        <attribute>
            <name>positionFixed</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <description>Indicate if the overlay should appear in a fixed position so that it is visible when the screen is scrolled.</description>
        </attribute>
        <attribute>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>Style class attached to the parent div.</description>
        </attribute>
        <attribute>
            <name>theme</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>b</defaultValue>
            <description>jQuery Mobile theme to apply to the overlay.</description>
        </attribute>
        <attribute>
            <name>beforeOpen</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Javascript function name to call prior to opening the overlay panel.</description>
        </attribute>
        <attribute>
            <name>afterClose</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Javascript function name to call prior to opening the overlay panel.</description>
        </attribute>
    </attributes>
</component>