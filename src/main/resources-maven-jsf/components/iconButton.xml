<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
    <tag>iconButton</tag>
    <tagClass>org.helix.mobile.component.iconbutton.IconButtonTag</tagClass>
    <componentClass>org.helix.mobile.component.iconbutton.IconButton</componentClass>
    <componentType>org.helix.mobile.IconButton</componentType>
    <componentFamily>org.helix.mobile.component</componentFamily>
    <rendererType>org.helix.mobile.component.IconButtonRenderer</rendererType>
    <rendererClass>org.helix.mobile.component.iconbutton.IconButtonRenderer</rendererClass>
    <parent>javax.faces.component.UIOutput</parent>

    <attributes>
        &standard_uicomponent_attributes;
        <attribute>
            <name>onstart</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Client side callback to execute before href/onclick begins.</description>
        </attribute>
        <attribute>
            <name>onclick</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Action to execute on click.</description>
        </attribute>
        <attribute>
            <name>oncomplete</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Client side callback to execute when href/onclick is completed.</description>
        </attribute>
        <attribute>
            <name>align</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Indicate if a button is left or right aligned in the context of a button bar.</description>
            <defaultValue>left</defaultValue>
        </attribute>
        <attribute>
            <name>href</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Link to browse to if this button is clicked.</description>
            <defaultValue>javascript:void(0);</defaultValue>
        </attribute>
        <attribute>
            <name>width</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Minimum width in pixels of this button.</description>
        </attribute>
        <attribute>
            <name>image</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>Style class for the image used in the button. The style class should have the format ui-icon-image.</description>
        </attribute>
        <attribute>
            <name>iconClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>Style class for the icon used in the button.</description>
        </attribute>
        <attribute>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>CSS style class for this button.</description>
        </attribute>
        <attribute>
            <name>theme</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>b</defaultValue>
            <description>Button theme.</description>
        </attribute>
        <attribute>
            <name>border</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <description>Button should have a border.</description>        
        </attribute>
    </attributes>

</component>